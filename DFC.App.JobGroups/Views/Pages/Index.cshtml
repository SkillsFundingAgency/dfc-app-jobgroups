@model IndexViewModel

@{
    Layout = "_LocalLayout";

    ViewData["Title"] = "Index";
}

<div class="govuk-grid-row">
    <div class="govuk-grid-column-full">
        @if (Model.Documents?.Count() > 0)
        {
            <ul>
                @foreach (var document in Model.Documents)
                {
                    if (document.Soc == null)
                    {
                        <li>
                            <a class="govuk-link" href="/@Model.Path/@document.Title">@document.Title</a>
                        </li>
                    }
                    else
                    {
                        <li>
                            <a class="govuk-link" href="/@Model.Path/@document.Soc/document">@document.Soc - @document.Title</a>
                        </li>
                    }
                }
            </ul>
        }
    </div>
</div>
